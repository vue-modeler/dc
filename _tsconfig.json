{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "downlevelIteration": true,
    "strict": false,
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "reflect-metadata",
      "node",
      "jest",
      "webpack-env",
      "vuetify"
    ],
    "paths": {
    },
    "lib": [
      "ES2022",
    ]
  },
  "vueCompilerOptions": {
    "target": 2.7,
  },
  "files": ["shims.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "core/**/*.ts",
    "core/**/*.vue",
    "test/**/*.ts",
    "module/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}
